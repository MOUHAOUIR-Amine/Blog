<%- include('partials/header') %>
<h1>Compose</h1>
<form class="" action="/compose" method="post">
  <div class="form-group">
    <label for="title">Title</label>
    <div class="input-group mb-3">
      <input type="text" class="form-control" name="title" size="160">
    </div>
  </div>
  <div class="form-group">
    <label for="postBody">Post</label>
    <div class="input-group">
      <textarea class="form-control" name="postBody" cols="160" rows="5"></textarea>
    </div>
  </div>
  <button type="submit" name="button" class="btn btn-primary">Publish</button>
</form>
<%- include('partials/footer') %>
